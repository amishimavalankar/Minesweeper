<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/puzzle_hilite"
    android:orientation="vertical"
     >
  
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Settings" 
            android:textSize="45sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dip"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/colorsettings"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Grid Color Settings" 
            android:textSize="30sp"
            android:textStyle="bold|italic"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:text="Blue"
            android:textStyle="bold|italic"

            />

        <SeekBar
            android:id="@+id/seekblue"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.54"
             android:max="255"
            android:progress="0"
           
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:text="Red"
            android:textStyle="bold|italic"

            />

        <SeekBar
            android:id="@+id/seekred"
            android:layout_width="match_parent"
             android:max="255"
            android:progress="0"
           
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:text="Green"
            android:textStyle="bold|italic"

            />

        <SeekBar
            android:id="@+id/seekgreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0"
            android:orientation="horizontal" />
    </LinearLayout>

   
       
    
    <TextView
        android:id="@+id/display_color"
        android:layout_width="70dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="color"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"

        />
    
    
    <TextView
        android:id="@+id/gridsettings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Grid Settings"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"

        />
       
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <LinearLayout
             android:layout_width="116dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.47"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/rows"
                 android:layout_width="78dp"
                 android:layout_marginLeft="70dp"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:text="Rows"
                 android:textStyle="bold|italic"

                 />

             <NumberPicker
                 android:id="@+id/numberPicker1"
                 android:layout_width="wrap_content"
                 android:layout_height="105dp"
                 android:layout_marginLeft="70dp"

                 />
         </LinearLayout>

         <LinearLayout
             android:layout_width="116dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.47"

             android:orientation="vertical" >

             <TextView
                 android:id="@+id/columns"
                 android:layout_width="78dp"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="100dp"

                 android:gravity="center"
                 android:text="Columns"
                 android:textStyle="bold|italic"
                 />

             <NumberPicker
                 android:id="@+id/numberPicker2"
                 android:layout_width="wrap_content"
                 android:layout_height="104dp"
                 android:layout_marginEnd="30dp"
                 android:layout_marginRight="30dp"

                 />
         </LinearLayout>
     </LinearLayout>

     <Button
         android:id="@+id/savesettings"
         android:layout_width="180dp"
         android:background="@drawable/buttons"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:text="Save Settings"
         android:textStyle="bold|italic"
         android:layout_marginTop="10dp"
         />
 
</LinearLayout>